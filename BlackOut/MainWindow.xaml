<Window x:Class="BlackOut.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackOut"
        mc:Ignorable="d" WindowState ="Normal" WindowStyle="None"   Title="MainWindow" Height="450" Width="800" Background="Black" ResizeMode="NoResize"  Topmost="True" ShowInTaskbar="False">
    <Grid>
        <TextBlock Foreground="White" x:Name="TipTextBlock">
            <Run>CTRL + ALT + H = BlackOut the active Screen the mouse is on.</Run>
            <LineBreak></LineBreak>
            <Run>CTRL + ALT + S = Show the current active Screen.</Run>
            <LineBreak></LineBreak>
            <Run>CTRL + ALT + H = Hide the current active Screen</Run>
            <LineBreak></LineBreak>
            <Run>CTRL + ALT + A = BlackOut all Screens.</Run>
            <LineBreak></LineBreak>
            <Run>CTRL + ALT + Q = Show all Screens.</Run>

            <LineBreak></LineBreak>
            <Run>CTRL + ALT + F2 = Show only current active Sceen and BlackOut all others.</Run>

        </TextBlock>
    </Grid>
</Window>
